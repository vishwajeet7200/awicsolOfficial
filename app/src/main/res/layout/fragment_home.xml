<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi User ! "
        android:textSize="20sp"
        android:id="@+id/headerLogo"
        android:textColor="#000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/headerLogo"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Explore !"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:id="@+id/headerLogo1"
        android:textColor="#000"
        android:layout_below="@id/carouselView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <GridLayout
        android:columnCount="2"
        android:rowCount="3"
        android:id="@+id/gridView"
        android:layout_below="@id/headerLogo1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:id="@+id/android"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_phone_android_24"
                    android:id="@+id/imgview"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="Android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/web"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_desktop_windows_24"
                    android:id="@+id/imgview1"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Web"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/ios"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_phone_iphone_24"
                    android:id="@+id/imgview2"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="ios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/customCard"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_baseline_code_24"
                    android:id="@+id/imgview4"
                    android:layout_width="40dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Custom"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Projects !"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:id="@+id/headerLogo2"
        android:textColor="#000"
        android:layout_below="@id/gridView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLogo2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/p1"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ad"
                    android:id="@+id/ip1"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="Android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/p2"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/web"
                    android:id="@+id/ip2"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/p3"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ios1"
                    android:id="@+id/ip3"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="ios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/p4"
            app:cardCornerRadius="12dp"
            android:layout_margin="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/custom"
                    android:id="@+id/ip4"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:text="Custom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    </RelativeLayout>
</ScrollView>