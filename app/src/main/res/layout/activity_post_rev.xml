<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PostRev">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/mimg"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            android:text="Review"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:id="@+id/name"
            android:textSize="20dp"
            android:layout_marginStart="50dp"/>
        <EditText
            android:id="@+id/txtdata"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="Enter the Job description"
            android:layout_below="@id/name"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtdata"
            android:text="User Name"
            android:textColor="#000000"
            android:id="@+id/address"
            android:textSize="20dp"
            android:layout_marginStart="50dp"/>
        <EditText
            android:id="@+id/txtdata1"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:hint="Enter the job title"
            android:layout_marginTop="0dp"
            android:layout_below="@id/address"
            android:gravity="center" />



        <Button
            android:id="@+id/btnbrowse"
            android:layout_width="200dp"
            android:background="@drawable/round_corner_shape"
            android:textColor="#000"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_height="64dp"
            android:textSize="18sp"
            android:layout_below="@+id/txtdata1"
            android:layout_marginTop="30dp"
            android:text="Browse" />

        <Button
            android:id="@+id/btnupload"
            android:layout_width="200dp"
            android:textColor="#000"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_height="61dp"
            android:textSize="18sp"
            android:background="@drawable/round_corner_shape"
            android:layout_below="@+id/btnbrowse"
            android:layout_marginTop="30dp"
            android:text="Upload" />

    </RelativeLayout>

</RelativeLayout>